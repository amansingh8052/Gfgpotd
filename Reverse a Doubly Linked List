# JAVA CODE

/*
class Node {
    int data;
    Node next;
    Node prev;

    Node(int data) {
        this.data = data;
        this.next = null;
        this.prev = null;
    }
}
*/

class Solution {
    public Node reverse(Node head) {
        if (head == null || head.next == null) return head;
        
        Node curr = head;
        Node temp = null;
        
        while (curr != null) {
            temp = curr.prev;     
            curr.prev = curr.next;
            curr.next = temp;
            
            curr = curr.prev;
        }
        
        if (temp != null) {
            head = temp.prev;
        }
        
        return head;
    }
}


# C++ CODE 

/*
class Node {
  public:
    int data;
    Node *next;
    Node *prev;
    Node(int val) {
        data = val;
        next = NULL;
        prev = NULL;
    }
};
*/

class Solution {
  public:
    Node* reverse(Node* head) {
        if (!head || !head->next) return head;
        
        Node* curr = head;
        Node* temp = nullptr;

        while (curr != nullptr) {
            temp = curr->prev;
            curr->prev = curr->next;
            curr->next = temp;

            curr = curr->prev;
        }

        if (temp != nullptr) {
            head = temp->prev;
        }

        return head;
    }
};
